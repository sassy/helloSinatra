!!! XML
!!! Strict

%html
  %head
    %title test
    %link{:rel=>"stylesheet", :href=>"http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css"}
  %body
    .container
      %h1 Hello, World
      %p Hello, World
      %form{:action=>"/", :method=>"POST"}
        %input{:type=>"textfield", :name=>"name"}
        %br
        %textarea{:name=>"message"}
        %br
        %input{:type=>"submit"}
      .row
        - @messages.each do |item|
          .span12
            %h2= item.name
            %p= item.message
